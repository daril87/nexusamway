gris_claro = #f2f2f2
gris_medium = #DDD
azul_claro = #0084AD
azul_medium = #165387
azul_fuerte = #002F5F

body
	background azul_claro
	font-family Arial
	font-size 10px

	.contenedorup
		background white
	
		header
			box-shadow 0 8px 10px rgba(0,0,0,0.4)
			margin 0
			position relative
			overflow hidden

			.banner
				margin-top 100px
				
				box-shadow 0 8px 10px rgba(0,0,0,0.4)
			
			.carousel
				box-shadow 0 8px 10px rgba(0,0,0,0.4)

			
			.contenedor
				background gris_medium
				box-shadow 0 5px 0 rgba(0,0,0,0.2)
				color azul_fuerte
				margin 0
				position fixed
				width 100%
				z-index 3
				
				
				.logo 
					float left

					img
						margin: 0 0 0 -1.1em
					

				.titular
					margin 0 60px 0 70px

					.filtro
						border-radius 5px
						color #0084AD
						font-family Lucida Calligraphy
						font-weight bold
						margin-left 12em
						text-decoration none
						
						
					.publicar
						color #002F5F
						font-style italic
						padding 0.2em 0.5em
						text-decoration none
						float right
						text-shadow 1px 1px 0 grey
						margin -5px 3em 0 0
						font-weight bold

					.publicar1
						color gray
						margin-left 41em
						position absolute
						text-decoration none
						top 1em


					.titulo
						font-weight bold
						margin-bottom 0
						margin-top 0.3em
						padding-top 0.1em
						font-family: Lucida Calligraphy;
						text-shadow: 3px 1px azul_fuerte

				.usuario
					position absolute
					top 0
					right 0

					.avatar
						margin 0 1.1em 0 0
						padding-top 0.2em
						position relative
					
						img
							border-radius 50%
							width 95%


													
				
		.posts
			margin 0

			.contenedor
				margin 0

				.col

					.imagen
						
						img
							width 100%
					
					.oportunidad
						margin-top 5px

						video 
							width 100%
							border-radius 25px

					.post
					.post1
					.post2
					.post3
						margin-top 30px
						position relative
						z-index 1

					.post1
					.post2
					.post3
						margin-bottom 30px
						
					.post1
					.post2
						transform scale(1.0)

						&:hover
							transform scale(1.1)
							z-index 2
						
					.post
						margin-left 10px
						
						.descripcion
							background #ddd
							border-radius 0 0 25px 25px
							margin-top 5px
							opacity 0.5
							padding 0.5em
							width 100%

							&:hover
								opacity 1

					.post1
						box-shadow 0 -8px 10px rgba(0,0,0,0.4)
						margin-left 20px
						margin-right 10px
						
					.post2
						box-shadow 0 -8px 10px rgba(0,0,0,0.4)
						margin-left 10px
						margin-right 20px

					.post3
						border-radius 125px
						box-shadow 0 -8px 10px rgba(0,0,0,0.4)
						margin-left 20px
						margin-right 20px

						.imagenes

							img
								border-radius 125px
								width 100%

			.top
				a
					position fixed
					bottom 1em
					right 1em
					text-decoration none
					color #fff
					background rgba(0,0,0,.3)
					font-size 13px
					padding 1em
					border-radius 3px
					z-index 3



	.contenedordown
	footer
		background azul_claro						

	footer
		bottom 0
		box-shadow 0 -8px 10px rgba(0,0,0,0.4)
		color gris_medium
		overflow hidden
		
		.informacion
			margin-left 50px
			margin-right 50px



		.marcas
		.corporacion
		.contacto
			text-align center

			a
				color gris_medium
				display block
				text-align center

				&:hover
					background rgba(0,0,0,0.4)
					border-radius 50px
					color white

			h4
				font-size 12px

		.derechos
			background rgba(0,0,0,0.4)
			color gris_medium
			margin-top 25px
			width 100%

			p
				text-align center

			a
				color gris_medium
				&:hover
					color white

@media screen and (min-width: 768px)
	body
		font-size 16px
		
		.contenedorup

			.posts

				.contenedor

					.col

						.post
							margin-left 20px

		.contenedordown

			footer
				
				.informacion
					margin-left 100px
					margin-right 100px

				.marcas
				.corporacion
				.contacto

					h4
						font-size 18px







					


						


				

	

							

		

		